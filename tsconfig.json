{
    "compilerOptions": {
      "target": "ES5",
      "module": "ESNext",
      "declaration": true,
      "declarationDir": "dist/types",
      "outDir": "dist",
      "jsx": "react",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "lib": ["es2016", "dom"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  